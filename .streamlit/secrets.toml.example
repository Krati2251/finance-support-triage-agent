#  Copy this file to .streamlit/secrets.toml (local dev)
#  OR paste these key-value pairs into the Streamlit Cloud
#  dashboard → App Settings → Secrets.
#
#  NEVER commit secrets.toml to Git!
# ══════════════════════════════════════════════════════════════

# Groq API Key (required) — https://console.groq.com/keys
GROQ_API_KEY = "gsk_your_groq_api_key_here"

# Gmail credentials (optional — needed for Fetch Emails feature)
# Use a Gmail App Password, NOT your regular password
# https://myaccount.google.com/apppasswords
EMAIL_USER = "yourname@gmail.com"
EMAIL_PASSWORD = "abcd efgh ijkl mnop"
